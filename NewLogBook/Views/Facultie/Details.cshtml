@model NewLogBook.Entities.Facultie

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details Faculty</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <h4>@Html.DisplayNameFor(model => model.Name)</h4>
        </dt>
        <dd class="col-sm-10">
            <h4>@Html.DisplayFor(model => model.Name)</h4>
        </dd>
    </dl>
    <div class="row">
        <div class="col-md-12">
            <h3>List Groups</h3>
        </div>
    </div>
    
    <dl class="row">
        @foreach (var VARIABLE in Model.Groups)
        {
            <dt class="col-md-2">
                @Html.DisplayName("Name Group")
            </dt>
            <dd class="col-md-10">
                @VARIABLE.Name
            </dd>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id},new {@class = "btn-success btn btn-sm"}) 
    <a asp-action="Index" class="btn btn-primary btn-sm">Back to List</a>
</div>
