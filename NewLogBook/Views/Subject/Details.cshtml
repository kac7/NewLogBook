@model NewLogBook.Entities.Subject

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details Subject</h1>

<div>
    <h4></h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @foreach (var VARIABLE in Model.TeachersSubjects)
        {
            if (Model.Id == VARIABLE.SubjectId)
            {
                <dt class="col-sm-2">
                    Teacher
                </dt>
                <dd class="col-sm-10">
                    @VARIABLE.Teacher.FirstName @VARIABLE.Teacher.LastName
                </dd>
            }
        }

    </dl>
    <div class="row">
        <div class="col-sm-12">
            <h4>List Marks</h4>
        </div>
    </div>
    <dl class="row">
        @foreach (var VARIABLE in Model.TeachersSubjects)
        {
            if (Model.Id == VARIABLE.SubjectId)
            {
                foreach (var VAR in VARIABLE.Marks)
                {
                    <dt class="col-sm-2">
                        Student
                    </dt>
                    <dd class="col-sm-4">
                        @VAR.Student.FirstName @VAR.Student.LastName
                    </dd>
                    <dt class="col-sm-2">
                        Mark
                    </dt>
                    <dd class="col-sm-4">
                        @VAR.Value
                    </dd>
                }

            }
        }

    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new {@class = "btn-success btn btn-sm"}) 
    <a asp-action="Index" class="btn-primary btn btn-sm">Back to List</a>
</div>
