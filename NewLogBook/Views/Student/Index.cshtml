@model IEnumerable<NewLogBook.Entities.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Students</h1>


@if (Model.Count() != 0)
{
    <p>
        <a asp-action="Create" class="btn-primary btn">Create New</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayName("Group Name")
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id}, new { @class = "btn-success btn btn-sm" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn-info btn btn-sm" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-danger btn btn-sm" }) 
                    @Html.ActionLink("+ mark","AddMark","Mark", new {id = item.Id}, new {@class = "btn-warning btn btn-sm" })
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <div class="col-md-12 text-center text-warning">
        <h5>Unfortunately there are no registered students yet</h5>
        <a asp-action="Create" class="btn-primary btn">Create new student</a>
    </div>
}