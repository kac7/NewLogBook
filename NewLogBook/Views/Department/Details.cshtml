@model NewLogBook.Entities.Department

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details Departament</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-sm-12">
        <h4>List Teachers</h4>
    </div>
</div>
@if (Model.Teachers.Count != 0)
{
    <dl class="row">
        @foreach (var VARIABLE in Model.Teachers)
        {
        <dt class="col-sm-3">Teacher name:</dt>
        <dd class="col-sm-9">@VARIABLE.FirstName @VARIABLE.LastName</dd>
        }
    </dl>

}
else
{
    <div class="row text-center text-warning">
        <div class="col-sm-12">
            <h5>Not Teachers!</h5>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new {@class = "btn-success btn btn-sm"}) 
    <a asp-action="Index" class="btn btn-primary btn-sm">Back to List</a>
</div>
